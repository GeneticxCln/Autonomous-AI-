# Environment Configuration Template
# Copy this to .env and fill in your API keys

# Core Agent Settings
MAX_CYCLES=100
LOG_LEVEL=INFO
TOOL_TIMEOUT=30
MAX_RETRIES=3
USE_REAL_TOOLS=true
TERMINAL_ONLY=true

# Search API Keys (at least one required for real web search)
SERPAPI_KEY=your_serpapi_key_here
BING_SEARCH_KEY=your_bing_search_key_here
GOOGLE_SEARCH_KEY=your_google_search_key_here

# LLM API Keys (optional but recommended)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_LLM_MODEL=gpt-3.5-turbo

# Database Settings (optional)
DATABASE_URL=sqlite:///agent.db

# Security Settings
SECRET_KEY=change-this-secret-key-in-production
API_KEY_ROTATION_DAYS=30

# Rate Limiting
REQUESTS_PER_MINUTE=60

# File System Security
ALLOWED_FILE_PATHS=/tmp,.,./workspace
BLOCKED_FILE_PATHS=/etc,/bin,/usr,/var/log

# Code Execution Security
USE_DOCKER_SANDBOX=false
MEMORY_LIMIT=512m