# Agent Enterprise System Environment Configuration
# Copy this file to .env and configure for production

# Database Configuration
DATABASE_URL=sqlite:///./agent_enterprise.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://username:password@localhost:5432/agent_enterprise
# When using docker-compose, set these explicitly (required by compose files)
POSTGRES_USER=agent_user
POSTGRES_PASSWORD=change-me
POSTGRES_DB=agent_db

# JWT Security Configuration (set via environment/secret manager in production)
# Leave blank in example to avoid committing secrets
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256

# Token Expiration Settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
API_DEBUG=false

# Security Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30

# CORS/Host Configuration (set real values for each environment)
# Example for production: CORS_ORIGINS=https://agent.example.com,https://app.example.com
# Example for development: include localhost for local UI
CORS_ORIGINS=https://agent.example.com,https://app.example.com,http://localhost:3000
ALLOWED_HOSTS=api.example.com,agent.example.com,localhost,127.0.0.1

# Environment
ENVIRONMENT=development
# ENVIRONMENT=production
# ENVIRONMENT=testing

# Security Headers (Production)
SECURE_HEADERS=true
ENABLE_HTTPS=false
# ENABLE_HTTPS=true

# Logging
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG

# Performance
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true

# Audit & Monitoring
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90

# Email Configuration (for password resets, etc.)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Redis Configuration (for production session storage)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Distributed Execution
DISTRIBUTED_ENABLED=true

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=cron:0 2 * * *
BACKUP_RETENTION_DAYS=30

# Tools and Execution Defaults
# Real tools are enabled by default; set to false to force mock tools
USE_REAL_TOOLS=true
# Terminal-only mode disables network-dependent tools such as web search
TERMINAL_ONLY=false

# Strict Mode
# When STRICT_MODE=true:
#  - Semantic similarity requires sentence-transformers and numpy (no fallback)
#  - Rate limiting requires Redis; in-memory fallback is disabled (fail-closed)
STRICT_MODE=false

# Web Search Providers
# Order in which providers are tried (subset of: serpapi,bing,google)
SEARCH_PROVIDER_ORDER=serpapi,bing,google
# Disable specific providers via a comma-separated list
DISABLED_SEARCH_PROVIDERS=
# Google Custom Search requires a CSE identifier in addition to GOOGLE_SEARCH_KEY
GOOGLE_CSE_ID=
