# Agent Enterprise System Environment Configuration
# Copy this file to .env and configure for production

# Database Configuration
DATABASE_URL=sqlite:///./agent_enterprise.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://username:password@localhost:5432/agent_enterprise

# JWT Security Configuration (set via environment/secret manager in production)
# Leave blank in example to avoid committing secrets
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256

# Token Expiration Settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
API_DEBUG=false

# Security Settings
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30

# CORS Configuration (Configure for production)
CORS_ORIGINS=*

# Environment
ENVIRONMENT=development
# ENVIRONMENT=production
# ENVIRONMENT=testing

# Security Headers (Production)
SECURE_HEADERS=true
ENABLE_HTTPS=false
# ENABLE_HTTPS=true

# Logging
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG

# Performance
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true

# Audit & Monitoring
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90

# Email Configuration (for password resets, etc.)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Redis Configuration (for production session storage)
REDIS_URL=redis://localhost:6379/0

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=cron:0 2 * * *
BACKUP_RETENTION_DAYS=30