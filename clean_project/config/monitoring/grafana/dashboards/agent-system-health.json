{
  "dashboard": {
    "id": null,
    "title": "Agent System Health",
    "tags": ["agent", "health", "operations"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 0,
    "time": {"from": "now-6h", "to": "now"},
    "panels": [
      {
        "id": 20,
        "title": "Overall Health Score",
        "type": "stat",
        "targets": [{"expr": "agent_system_health_score", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 85}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 21,
        "title": "Active Incidents",
        "type": "stat",
        "targets": [{"expr": "agent_active_incidents_total", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 3}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 22,
        "title": "Uptime",
        "type": "stat",
        "targets": [{"expr": "system_uptime_seconds / 3600", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "unit": "hours",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 4}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 23,
        "title": "Alerts (last 1h)",
        "type": "stat",
        "targets": [{"expr": "sum(increase(agent_alert_events_total[1h]))", "refId": "A"}],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 24,
        "title": "Component Health",
        "type": "table",
        "targets": [{"expr": "agent_component_health_score", "refId": "A"}],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 25,
        "title": "Alerts by Severity",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (severity)(increase(agent_alert_events_total[1h]))",
            "refId": "A"
          }
        ],
        "yAxes": [{"label": "Alerts / hour", "min": 0}],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 26,
        "title": "CPU / Memory / Disk",
        "type": "graph",
        "targets": [
          {"expr": "system_cpu_usage_percent", "refId": "A", "legendFormat": "CPU %"},
          {"expr": "system_memory_usage_percent", "refId": "B", "legendFormat": "Memory %"},
          {"expr": "system_disk_usage_percent", "refId": "C", "legendFormat": "Disk %"}
        ],
        "yAxes": [{"label": "Percent", "min": 0, "max": 100}],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 27,
        "title": "Threads & Processes",
        "type": "graph",
        "targets": [
          {"expr": "system_thread_count", "refId": "A", "legendFormat": "Threads"},
          {"expr": "system_process_count", "refId": "B", "legendFormat": "Processes"}
        ],
        "yAxes": [{"label": "Count", "min": 0}],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 28,
        "title": "Network Throughput (bytes/sec)",
        "type": "graph",
        "targets": [
          {"expr": "rate(system_network_bytes_sent_total[5m])", "refId": "A", "legendFormat": "Sent"},
          {"expr": "rate(system_network_bytes_recv_total[5m])", "refId": "B", "legendFormat": "Recv"}
        ],
        "yAxes": [{"label": "Bytes/sec", "min": 0}],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ]
  }
}
